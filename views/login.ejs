<% include ./partials/header %>
<div class="container-fluid d-flex align-items-center" style="height: 100vh">
    <div class="container">
            <a href="/" class="logo h3 bg-dark text-white text-center mx-auto shadow-lg d-block">B</a>
            <h2 class="h2 text-center text-white form-label mx-auto">Login</h2>
            <br />
            <br />
            <form action="/user/login" method="POST" class="container form">
                <input autocomplete='false' type="text" class="form-control mb-4 py-2" id="username" placeholder="Username" name="username">
                <input autocomplete='false' type="password" class="form-control  mb-2 py-2" id="password" placeholder="Password" name="password">
                <p class=" mb-4 py-2 text-center text-secondary">No account yet? Click <a class="text-warning" href="/user/signup"><strong>here</strong></a> to sign up</p>
                <br />
                <div class="text-right">
                        <button class=" btn btn-dark py-2 shadow">Submit</button>
                </div>
            </form>
    </div>
</div>
